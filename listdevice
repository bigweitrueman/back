import pyaudio

p = pyaudio.PyAudio()

print("可用的音频输出设备:")
print("--------------------")

for i in range(p.get_device_count()):
    dev_info = p.get_device_info_by_index(i)
    if dev_info['maxOutputChannels'] > 0:
        print(f"设备索引: {i}")
        print(f"  名称: {dev_info['name']}")
        print(f"  默认采样率: {dev_info['defaultSampleRate']} Hz")
        print("--------------------")

p.terminate()
